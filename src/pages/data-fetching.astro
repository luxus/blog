---
import Layout from '@/layouts/BaseLayout.astro';

const response = await fetch('https://api.spacexdata.com/v4/launches/latest');
const launchData = await response.json() as { name: string; date_utc: string; details: string };
---
<Layout>
    <h1>Data Fetching Example</h1>
    <h2>Latest SpaceX Launch</h2>
    <p><strong>Name:</strong> {launchData.name}</p>
    <p><strong>Date:</strong> {new Date(launchData.date_utc).toLocaleDateString()}</p>
    <p><strong>Details:</strong> {launchData.details}</p>
</Layout>
