---
import Layout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
const blogPosts = await getCollection('blog');
---
<Layout>
    <h1>Blog</h1>
    <ul>
        {blogPosts.map((post) => (
                <li><a href={`/blog/${post.slug}`}>{post.data.title}</a> - {post.data.date}</li>
        ))}
    </ul>
</Layout>
